<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsScreen.ResultsFragment"
    android:background="@color/colorMain">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Well done! You have successfully recovered the Holy Pint Glass!" />

    <TextView
        android:id="@+id/DrinkAmountTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainText"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/P1DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DrinkAmountTotal"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/P2DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/P1DrinkAmount"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/P3DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/P2DrinkAmount"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/P4DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/P3DrinkAmount"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/P5DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/P4DrinkAmount"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/P6DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/P5DrinkAmount"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/P7DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/P6DrinkAmount"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/P8DrinkAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/P7DrinkAmount"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game?"
        android:layout_below="@id/P8DrinkAmount"
        android:layout_marginTop="20dp"/>

</RelativeLayout>